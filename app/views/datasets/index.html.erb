
<h1>Listing datasets</h1>
<%= link_to 'New dataset', new_dataset_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Documentation</th>
    <th colspan="3"></th>
  </tr>
 
  <% @datasets.each do |dataset| %>
    <tr>
      <td><%= dataset.name %></td>
      <td><%= dataset.documentation %></td>
      <td><%= link_to 'Show', dataset_path(dataset) %></td>
      <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
      <td><%= link_to 'Destroy', dataset_path(dataset),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>