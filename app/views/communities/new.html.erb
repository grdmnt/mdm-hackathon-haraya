<div class="ui basic segment">


    <h2 class="ui header">Create a Community</h2>
    <div class="ui divider"></div>
    <%= form_for @community, html: { class: 'ui form' } do |f| %>

        <div class="field">
            <label>Name of Community:</label>
            <%= f.text_field :name, placeholder: 'Name of Community' %>

        </div>
        <div class="field">
            <label>Description:</label>
            <%= f.text_area :description, placeholder: 'Description'%>
        </div>
        <%= f.submit "Create Community", class: "ui button primary" %>

    <% end %>
</div>